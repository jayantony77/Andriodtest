<Scores>
    BoxLayout:
        orientation: "vertical"
        padding:"10dp"
        ScrollView:
            MDList:
                id:scorelist
                    

<Data>
<ScoreCardItem>
    id:scorecarditem
    size_hint_y:None
    height:"120dp"
    elevation:20
    adaptive_height:True
        
    MDCard:
        orientation: "vertical"
        border_radius: 20
        radius: [15]
        background_color: 0.5,0.5,0.5,1
        #focus_behavior: True
        #ripple_behavior: True
        md_bg_color: app.theme_cls.primary_light

        MDLabel:
            id:matchlbl
            adaptive_height:True
            halign:"center"
        
        MDSeparator:
            height: "1dp"
        Data:
            id:data
            cols:6
            cols_minimum: {0:120,1:20, 2:40, 3:20, 4:20, 5:20, 6:20}

<ScoreCardBowlItem>
    id:scorecarditem
    size_hint_y:None
    height:"125dp"
    elevation:20
    adaptive_height:True
        
    MDCard:
        orientation: "vertical"
        border_radius: 20
        radius: [15]
        md_bg_color: app.theme_cls.primary_light
        MDLabel:
            id:matchlbl
            adaptive_height:True
            halign:"center"
        
        MDSeparator:
            height: "1dp"
        Data:
            id:data
            cols:6
            cols_minimum: {0:80,1:5, 2:5, 3:5, 4:5, 5:5, 6:85}
            
           