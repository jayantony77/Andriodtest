#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT

#:import Scores AnalysisScreen.Scores
#:import General AnalysisScreen.General
#:import Tab AnalysisScreen.Tab

<AnalyzeScreen>:
    name:"analyzeScreen"
    BoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "5dp"
        MDToolbar:
            title: "Analyze Tabs"
            #adaptive_height: "True"
            anchor_title: 'center'

        MDTabs:
            id:tab 
            size_hiny_y: None
            adaptive_height: "True"
            on_tab_switch: root.on_tab_switch(*args)
                                

            General:
                id:"General"
                text: "General"

            Scores:
                id:sc_bat
                text: "Scores-Batting"
            Scores:
                id:sc_bowl
                text: "Scores-Bowling"
            Tab:
                text: "Prediction"
        
        
    MDIconButton:
        icon:"arrow-left"
        y: (root.height - self.height / 2 - STANDARD_INCREMENT / 2) - 12

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'firstScreen'        

<General>
    BoxLayout:
        orientation: "vertical"
        padding:"10dp"
        spacing: "50dp"

        MDRectangleFlatButton:
            text: "Pitch Report    "
            halign: "center"

        MDRectangleFlatButton:
            text: "Player Analysis"
            
        MDRectangleFlatButton:
            text: "Miscellenous    "

         
        Widget:
            size_hint_y:None
            height: "100dp"
            